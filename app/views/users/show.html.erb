<h1 class="p-2">Your Created Events</h1>
<div class="container">
  <% @created_events.each do |event| %>
    <div class="card mx-auto my-3 p-2" style="width: auto">
      <div class="card-header">
        <h5 class="card-title"><%= event.title %></h5>
      </div>
      <div class="card-body">
        <h6 class="card-subtitle"><%= event.date.to_fs(:short) %> | <%= event.start_time.to_fs(:time) %></h6>
        <p class="card-text"><%= event.location %></p>
      </div>
      <div class="card-footer">
        <p class="card-text"><%= event.description%></p>
      </div>
    </div>
  <% end %>
</div>

<h1 class="p-2">Your Upcoming Events</h1>
<div class="container">
  <% @attending_events.each do |event| %>
    <% if event.date >= Date.today %>
      <div class="card mx-auto my-3 p-2" style="width: auto">
        <div class="card-header">
          <h5 class="card-title"><%= event.title %></h5>
        </div>
        <div class="card-body">
          <h6 class="card-subtitle"><%= event.date.to_fs(:short) %> | <%= event.start_time.to_fs(:time) %></h6>
          <p class="card-text"><%= event.location %></p>
        </div>
        <div class="card-footer">
          <p class="card-text"><%= event.description%></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<h1 class="p-2">Your Past Events</h1>
<div class="container">
  <% @attending_events.each do |event| %>
    <% if event.date < Date.today %>
      <div class="card mx-auto my-3 p-2" style="width: auto">
        <div class="card-header">
          <h5 class="card-title"><%= event.title %></h5>
        </div>
        <div class="card-body">
          <h6 class="card-subtitle"><%= event.date.to_fs(:short) %> | <%= event.start_time.to_fs(:time) %></h6>
          <p class="card-text"><%= event.location %></p>
        </div>
        <div class="card-footer">
          <p class="card-text"><%= event.description%></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>